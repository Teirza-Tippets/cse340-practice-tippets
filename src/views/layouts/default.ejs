<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main>
        <%- body %>
    </main>
    <footer>
        <%- include('../partials/footer') %>
    </footer>
    <% if (locals.isDevMode) { %>
        <script>
            const socket = new WebSocket('ws://localhost:<%= parseInt(process.env.PORT || 3000) + 1 %>');
            socket.onmessage = (event) => {
                if (event.data === 'reload') {
                    location.reload();
                }
            };
        </script>
    <% } %>
</body>
</html>